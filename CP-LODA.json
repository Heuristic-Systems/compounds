  ],
  "phases": [
    {
      "phase_id": "PH-LODA-1",
      "was": "CP-LD-1",
      "phase_name": "Goal Decomposition Engine",
      "calls_elements": [
        "E-L01-PER-BRIDGE",
        "E-L01-MC-BUNDLE",
        "E-L01-CS-BUNDLE",
        "E-L01-GEN-BUNDLE",
        "E-L01-MAI-BUNDLE",
        "E-L06-COG-BUNDLE",
        "E-L06-HUM-BUNDLE",
        "E-L06-PRC-BUNDLE",
        "E-L06-EXP-BUNDLE",
        "E-L06-PRF-BUNDLE",
        "E-L06-STR-BUNDLE",
        "E-L06-PSY-BUNDLE"
      ],
      "element_instructions": {
        "E-L01-PER-BRIDGE": {
          "instruction": "get_personality_context",
          "purpose": "Get personality-informed goal structuring preferences (C for detail level, O for flexibility)"
        },
        "E-L01-MC-BUNDLE": {
          "instruction": "assess_goal_clarity",
          "purpose": "Evaluate learner's goal clarity and planning capacity"
        },
        "E-L01-CS-BUNDLE": {
          "instruction": "evaluate_domain_constraints",
          "purpose": "Identify domain-specific structuring constraints"
        },
        "E-L01-GEN-BUNDLE": {
          "instruction": "gather_system_context",
          "purpose": "Collect institutional and curriculum context"
        },
        "E-L01-MAI-BUNDLE": {
          "instruction": "assess_goal_commitment",
          "purpose": "Evaluate motivational commitment to goal"
        },
        "E-L06-COG-BUNDLE": {
          "instruction": "extract_bloom_objectives",
          "purpose": "Use Bloom atoms to ask: What should learners Remember/Understand/Apply/Analyze/Evaluate/Create?"
        },
        "E-L06-HUM-BUNDLE": {
          "instruction": "extract_fink_objectives",
          "purpose": "Use Fink atoms to ask: What objectives for Foundational Knowledge/Application/Integration/Human Dimension/Caring/Learning How to Learn?"
        },
        "E-L06-PRC-BUNDLE": {
          "instruction": "extract_gagne_prerequisites",
          "purpose": "Use Gagné atoms to identify prerequisite skills that must become their own objectives"
        },
        "E-L06-EXP-BUNDLE": {
          "instruction": "extract_kolb_modes",
          "purpose": "Use Kolb atoms to ensure objectives span all 4 experiential modes (CE/RO/AC/AE)"
        },
        "E-L06-PRF-BUNDLE": {
          "instruction": "extract_dreyfus_stages",
          "purpose": "Use Dreyfus atoms to create stage-appropriate objectives (Novice→Expert)"
        },
        "E-L06-STR-BUNDLE": {
          "instruction": "extract_solo_structure",
          "purpose": "Use SOLO atoms to define structural complexity requirements"
        },
        "E-L06-PSY-BUNDLE": {
          "instruction": "extract_psychomotor_objectives",
          "purpose": "Use Simpson atoms to identify psychomotor skill objectives if applicable"
        }
      },
      "execution_flow": [
        "1. Read K-LD-0 framework for decomposition rules",
        "2. Determine intake_mode (curriculum/teacher/student) and intake_method",
        "3. BRANCH by intake_mode:",
        "   3a. CURRICULUM: Parse API/JSON input, validate structure",
        "   3b. TEACHER: Parse API/JSON/upload or conduct conversation",
        "   3c. STUDENT: Conduct conversation, infer SSOT type, confirm with learner",
        "4. Instruct E-L01-PER-BRIDGE: get_personality_context (if student/teacher)",
        "5. Instruct L01 elements for learner context (MC, CS, GEN, MAI bundles)",
        "6. Instruct L06 elements for framework-guided extraction:",
        "   6a. E-L06-COG-BUNDLE: What should learners Remember/Understand/Apply/Analyze/Evaluate/Create?",
        "   6b. E-L06-HUM-BUNDLE: Coverage across Fink's 6 dimensions?",
        "   6c. E-L06-PRC-BUNDLE: What prerequisites must become objectives?",
        "   6d. E-L06-EXP-BUNDLE: Objectives for all Kolb experiential modes?",
        "   6e. E-L06-PRF-BUNDLE: Stage-appropriate objectives for current→target Dreyfus level?",
        "   6f. E-L06-STR-BUNDLE: Required structural complexity?",
        "   6g. E-L06-PSY-BUNDLE: Psychomotor objectives if applicable?",
        "7. Synthesize extracted objectives into objective_tree",
        "8. Build dependency_graph using Gagné learning hierarchies",
        "9. Adjust hierarchy depth based on personality (C score) and intake_mode",
        "10. Apply interpretation_logic to validate decomposition",
        "11. Attach ssot_type (for student intake) or null (for curriculum/teacher)",
        "12. Emit objective_tree with dependency_graph and intake_mode_used"
      ],
      "interpretation_logic": {
        "WELL_DECOMPOSED": {
          "condition": "all_objectives_atomic AND all_objectives_measurable AND dependency_graph_complete",
          "action": "emit_objective_tree_for_classification"
        },
        "PARTIAL_DECOMPOSITION": {
          "condition": "some_objectives_measurable AND dependency_graph_partial",
          "action": "iterate_decomposition_with_guidance"
        },
        "POOR_DECOMPOSITION": {
          "condition": "objectives_vague OR dependency_graph_missing",
          "action": "request_domain_expert_input"
        },
        "personality_adjustments": {
          "high_conscientiousness": "generate more detailed hierarchy with explicit milestones",
          "low_conscientiousness": "generate simpler hierarchy with fewer levels",
          "high_openness": "allow flexible pathways between objectives",
          "low_openness": "enforce linear, structured pathways"
        }
      },
      "outputs": {
        "primary": "objective_tree",
        "secondary": [
          "goal_hierarchy",
          "dependency_graph",
          "decomposition_confidence",
          "ssot_type",
          "intake_mode_used"
        ]
      },
      "loop_policy": {
        "strategy": "iterate_until_complete",
        "reinterpretation_max": 3,
        "more_data_max": 2,
        "escalation_condition": "Cannot decompose goal into measurable objectives within bounded loops."
      },
      "upstream": [],
      "downstream": [
        "PH-LODA-3"
      ]
    },
    {
      "phase_id": "PH-LODA-2",
      "was": "CP-LD-2",
      "phase_name": "Taxonomic Classifier",
      "calls_elements": [
        "E-L01-PER-BRIDGE",
        "E-L01-MC-BUNDLE",
        "E-L01-EF-BUNDLE",
        "E-L01-CS-BUNDLE",
        "E-L01-GEN-BUNDLE",
        "E-L06-COG-BUNDLE",
        "E-L06-STR-BUNDLE",
        "E-L06-HUM-BUNDLE",
        "E-L06-PRC-BUNDLE",
        "E-L06-EXP-BUNDLE",
        "E-L06-PRF-BUNDLE",
        "E-L06-PSY-BUNDLE"
      ],
      "element_instructions": {
        "E-L01-PER-BRIDGE": {
          "instruction": "get_personality_context",
          "purpose": "Get personality-informed taxonomy interpretation (O for abstraction comfort)"
        },
        "E-L01-MC-BUNDLE": {
          "instruction": "assess_cognitive_level_readiness",
          "purpose": "Evaluate learner's readiness for different cognitive levels"
        },
        "E-L01-EF-BUNDLE": {
          "instruction": "analyse_feedback_requirements",
          "purpose": "Determine feedback needs for each taxonomy level"
        },
        "E-L01-CS-BUNDLE": {
          "instruction": "evaluate_task_constraints",
          "purpose": "Identify constraints affecting taxonomy classification"
        },
        "E-L01-GEN-BUNDLE": {
          "instruction": "gather_curriculum_standards",
          "purpose": "Collect curriculum-level taxonomy requirements"
        },
        "E-L06-COG-BUNDLE": {
          "instruction": "classify_bloom_and_webb",
          "purpose": "Classify cognitive level (BT1-BT6) and depth of knowledge (DK1-DK4)"
        },
        "E-L06-STR-BUNDLE": {
          "instruction": "classify_solo_structure",
          "purpose": "Classify structural complexity (R1-R5: Prestructural to Extended Abstract)"
        },
        "E-L06-HUM-BUNDLE": {
          "instruction": "classify_fink_significance",
          "purpose": "Identify Fink's Significant Learning categories present"
        },
        "E-L06-PRC-BUNDLE": {
          "instruction": "classify_gagne_event",
          "purpose": "Classify instructional event type (E1-E9)"
        },
        "E-L06-EXP-BUNDLE": {
          "instruction": "classify_kolb_mode",
          "purpose": "Classify experiential mode (CE/RO/AC/AE/MX)"
        },
        "E-L06-PRF-BUNDLE": {
          "instruction": "classify_dreyfus_level",
          "purpose": "Classify target proficiency level (P1-P5: Novice to Expert)"
        },
        "E-L06-PSY-BUNDLE": {
          "instruction": "classify_simpson_psychomotor",
          "purpose": "Classify psychomotor level (S1-S7 or NA if not applicable)"
        }
      },
      "execution_flow": [
        "1. Read K-LD-1 framework for taxonomy rules",
        "2. Receive objective_tree and intake_mode from CP-LD-1",
        "3. Instruct E-L01-PER-BRIDGE: get_personality_context",
        "4. Instruct L01 context elements (MC, EF, CS, GEN bundles)",
        "5. FOR EACH objective in objective_tree:",
        "   5a. Instruct E-L06-COG-BUNDLE: classify Bloom level (BT1-BT6) and Webb DOK (DK1-DK4)",
        "   5b. Instruct E-L06-STR-BUNDLE: classify SOLO level (R1-R5)",
        "   5c. Instruct E-L06-HUM-BUNDLE: identify Fink categories present",
        "   5d. Instruct E-L06-PRC-BUNDLE: classify Gagné event (E1-E9)",
        "   5e. Instruct E-L06-EXP-BUNDLE: classify Kolb mode (CE/RO/AC/AE/MX)",
        "   5f. Instruct E-L06-PRF-BUNDLE: classify Dreyfus level (P1-P5)",
        "   5g. Instruct E-L06-PSY-BUNDLE: classify Simpson level (S1-S7 or NA)",
        "   5h. Classify Krathwohl affective level (K1-K5 or NA) inline",
        "6. Cross-validate all 8 dimensions for consistency",
        "7. Apply interpretation_logic",
        "8. Emit taxonomy_classification with all segment codes"
      ],
      "interpretation_logic": {
        "CLEAR_CLASSIFICATION": {
          "condition": "all_8_dimensions_classified AND no_conflicts",
          "action": "emit_taxonomy_classification"
        },
        "AMBIGUOUS_CLASSIFICATION": {
          "condition": "any_dimension_uncertain",
          "action": "refine_objective_wording"
        },
        "MISALIGNED_CLASSIFICATION": {
          "condition": "dimension_conflicts_detected",
          "action": "recommend_objective_decomposition"
        },
        "SSOT_RANGE_MISMATCH": {
          "condition": "ssot_type_present AND classification_outside_typical_range",
          "action": "flag_for_review_but_allow",
          "note": "Ranges are typical, not mandatory. Log deviation for advising."
        },
        "personality_adjustments": {
          "high_openness": "favour higher taxonomy levels (analyze, evaluate, create)",
          "low_openness": "ensure solid foundation at lower levels before advancing",
          "high_conscientiousness": "include metacognitive dimension objectives"
        }
      },
      "outputs": {
        "primary": "taxonomy_classification",
        "secondary": [
          "prc_code",
          "cog_code",
          "dok_code",
          "str_code",
          "exp_code",
          "aff_code",
          "psy_code",
          "prf_code"
        ],
        "signature_segments": {
          "description": "Ready for CP-LD-8 to assemble into LOOS or SOS signature",
          "format": {
            "LOOS": "OBJ06-{PRC}-{COG}-{STR}-{EXP}-{AFF}-{PSY}-{PRF}-{EVD}",
            "SOS": "SOS{TYPE}{PRC}{COG}{DOK}{STR}{EXP}{AFF}{PSY}{PRF}{EVD}"
          }
        }
      },
      "loop_policy": {
        "strategy": "single_pass",
        "reinterpretation_max": 2,
        "more_data_max": 1,
        "escalation_condition": "Cannot achieve unambiguous taxonomy classification."
      },
      "upstream": [
        "PH-LODA-2"
      ],
      "downstream": [
        "PH-LODA-4"
      ]
    },
    {
      "phase_id": "PH-LODA-3",
      "was": "CP-LD-3",
      "phase_name": "Complexity Analyzer",
      "calls_elements": [
        "E-L01-PER-BRIDGE",
        "E-L01-MC-BUNDLE",
        "E-L01-MAI-BUNDLE",
        "E-L01-EF-BUNDLE",
        "E-L01-CS-BUNDLE"
      ],
      "element_instructions": {
        "E-L01-PER-BRIDGE": {
          "instruction": "derive_sensitivity_thresholds",
          "purpose": "Get personality-informed stress and capacity thresholds (N for frustration, C for persistence)"
        },
        "E-L01-MC-BUNDLE": {
          "instruction": "assess_planning_capacity",
          "purpose": "Evaluate cognitive planning and strategy capacity"
        },
        "E-L01-MAI-BUNDLE": {
          "instruction": "assess_affective_tolerance",
          "purpose": "Evaluate stress reactivity and frustration tolerance"
        },
        "E-L01-EF-BUNDLE": {
          "instruction": "analyse_error_cost_impact",
          "purpose": "Assess how errors affect learning trajectory"
        },
        "E-L01-CS-BUNDLE": {
          "instruction": "evaluate_time_constraints",
          "purpose": "Identify time and resource constraints"
        }
      },
      "execution_flow": [
        "1. Read K-LD-2 framework for complexity analysis rules",
        "2. Receive classified_objectives from CP-LD-2",
        "3. Instruct E-L01-PER-BRIDGE: derive_sensitivity_thresholds",
        "4. Receive personality-adjusted thresholds (N→frustration, C→persistence)",
        "5. Instruct E-L01-MC-BUNDLE: assess_planning_capacity",
        "6. Instruct E-L01-MAI-BUNDLE: assess_affective_tolerance",
        "7. Instruct E-L01-EF-BUNDLE: analyse_error_cost_impact",
        "8. Instruct E-L01-CS-BUNDLE: evaluate_time_constraints",
        "9. Receive evidence bundles from all Elements",
        "10. Calculate intrinsic cognitive load from objective complexity",
        "11. Calculate affective demand with personality adjustment",
        "12. Estimate time requirements based on load and capacity",
        "13. Determine supervision level recommendation",
        "14. Apply interpretation_logic with personality adjustments",
        "15. Emit complexity_score with time_estimate"
      ],
      "interpretation_logic": {
        "MANAGEABLE_COMPLEXITY": {
          "condition": "total_load <= learner_capacity AND affective_demand <= personality_adjusted_threshold",
          "action": "proceed_with_standard_scaffolding"
        },
        "CHALLENGING_COMPLEXITY": {
          "condition": "total_load > learner_capacity * 0.8 OR affective_demand > frustration_threshold * 0.8",
          "action": "recommend_enhanced_scaffolding_or_chunking"
        },
        "EXCESSIVE_COMPLEXITY": {
          "condition": "total_load > learner_capacity * 1.2 OR affective_demand > frustration_threshold",
          "action": "require_decomposition_or_prerequisite_completion"
        },
        "personality_adjustments": {
          "high_neuroticism": "lower affective demand threshold by 20%",
          "high_conscientiousness": "higher persistence expectation - can handle sustained complexity",
          "low_conscientiousness": "chunk into smaller complexity units",
          "high_openness": "tolerate higher cognitive ambiguity"
        }
      },
      "outputs": {
        "primary": "complexity_score",
        "secondary": [
          "cognitive_demand",
          "affective_demand",
          "time_estimate",
          "supervision_level"
        ]
      },
      "loop_policy": {
        "strategy": "single_pass",
        "reinterpretation_max": 2,
        "more_data_max": 1,
        "escalation_condition": "Cannot determine complexity - insufficient learner data."
      },
      "upstream": [
        "PH-LODA-3"
      ],
      "downstream": [
        "PH-LODA-5"
      ]
    },
    {
      "phase_id": "PH-LODA-4",
      "was": "CP-LD-4",
      "phase_name": "Success Criteria Generator",
      "calls_elements": [
        "E-L01-PER-BRIDGE",
        "E-L01-MC-BUNDLE",
        "E-L01-EF-BUNDLE",
        "E-L01-CS-BUNDLE",
        "E-L01-MAI-BUNDLE"
      ],
      "element_instructions": {
        "E-L01-PER-BRIDGE": {
          "instruction": "get_personality_context",
          "purpose": "Get personality-informed criteria presentation (C for detail, N for threshold sensitivity)"
        },
        "E-L01-MC-BUNDLE": {
          "instruction": "assess_self_monitoring_capacity",
