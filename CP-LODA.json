      "interpretation_logic": {
        "WELL_DEFINED_CRITERIA": {
          "condition": "behavior_observable AND conditions_specified AND threshold_measurable",
          "action": "emit_success_criteria"
        },
        "PARTIAL_CRITERIA": {
          "condition": "behavior_observable AND (conditions_vague OR threshold_missing)",
          "action": "refine_criteria_with_examples"
        },
        "VAGUE_CRITERIA": {
          "condition": "behavior_not_observable OR threshold_not_measurable",
          "action": "rewrite_objective_with_action_verbs"
        },
        "personality_adjustments": {
          "high_conscientiousness": "provide detailed rubrics with multiple levels",
