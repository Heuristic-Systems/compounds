          "performance_oriented": "include comparison benchmarks",
          "mastery_oriented": "emphasize personal progress criteria"
        }
      },
      "outputs": {
        "primary": "success_criteria",
        "secondary": [
          "mastery_threshold",
          "evidence_requirements",
          "measurement_type"
        ]
      },
      "loop_policy": {
        "strategy": "iterate_until_valid",
        "reinterpretation_max": 3,
        "more_data_max": 1,
        "escalation_condition": "Cannot define measurable success criteria."
      },
      "upstream": [
        "PH-LODA-4"
      ],
      "downstream": [
        "PH-LODA-6"
      ]
    },
